#introduction {
    background: rgba(32, 36, 46, .9) url(../img/aff.jpg) no-repeat center bottom fixed;
    background-size: cover;
    position: relative;
}

#introduction:before {
    content: '';
    width: 100%;
    top: 0;
    bottom: 0;
    left: 0;
    position: absolute;
    z-index: 0;
    background-color: rgba(0, 0, 0, .3);
}

#introduction ul {
    font-size: 14px;
}

#introduction ul li {
    margin: 5px 0;
}

#content {
    margin: 30px 0;
}

#product {
    margin-top: 10px;
}

.form-row {
    position: relative;
    display: table;
    width: 100%;
    border-bottom: solid 1px #eee;
}

.form-row:before {
    display: table-cell;
    width: 26px;
    height: 100%;
    text-align: center;
    vertical-align: middle;
    content: attr(data-title);
    color: rgba(0, 0, 0, .3);
    transition: all 1s;
    padding: 20px 0;
    padding: 0 10px;
}

.form-row:hover:before {
    color: rgba(0, 0, 0, .7);
}

.form-row:last-child {
    border-bottom: none;
}

.form-cell {
    padding: 40px 40px;
    font-size: 12px;
}

.button-checked {
    margin: 2px 4px;
    display: inline-block;
}

.button-checked:first-child {
    margin-left: 0;
}

.button-checked input {
    display: none;
}

.button-checked label {
    display: inline-block;
    line-height: 32px;
    user-select: none;
    width: 120px;
    text-align: center;
    border: solid 1px rgba(0, 0, 0, .1);
    background: #fff;
    cursor: pointer;
    transition: all .5s;
    font-size: 14px;
    border-radius: 2px;
}

.button-checked label:hover {
    border-color: #67b7f3;
}

.button-checked input:checked + label {
    background: #67b7f3;
    border-color: #67b7f3;
    color: #fff;
    cursor: default;
}

.form-cell-info {
    margin-top: 10px;
    color: #999;
}

div + .form-cell-info {
    clear: both;
}

.form-cell .fields {
    margin-bottom: 30px !important;
    align-items: inherit !important;
}

.form-cell .fields > label {
    line-height: 36px;
    word-break: keep-all;
}

.form-cell .fields:last-child {
    margin-bottom: 0 !important;
}

#order {
    padding-bottom: 30px;
}

#order .order-info {
    border-top: 1px solid rgba(34, 36, 38, 0.15);
    padding: 20px 0;
    color: #666;
    font-size: 12px;
}

#order .order-info .fields {
    margin: 5px 0;
}

#order .order-info label {
    font-weight: 400;
    color: #999;
}

#order .price{
    margin-top:20px;
    height: 60px;
}
#order .price p{
    line-height: 32px;
}

#order .price i{
    font-style: normal;
    color: #999;
    margin-right:5px;
}

#order .price b{
    color: #f60;
    font-size: 26px;
}

#order .order-info span:not(:last-child):after {
    content: '/';
    margin: 0 5px;
    color: #ccc;
}

.license{
    display: none;
    margin-top: 10px;
    font-size: 12px;
}

.ui.fluid.button.openlogin{
    display: none;
}

#payment{
    display: none;
}

.slider-range .slider-bar {
    overflow: hidden;
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.slider-range .slider-bar label {
    float: left;
    padding: 0 20px;
    height: 26px;
    line-height: 24px;
    font-size: 12px;
    text-align: center;
    border: solid 1px rgba(0, 0, 0, .1);
    background: #fff;
    cursor: pointer;
    transition: all .5s;
    margin: 7px -1px 0 0;
    user-select: none;
}

.slider-range .slider-bar li:first-child label  {
    border-bottom-left-radius: 3px;
    border-top-left-radius: 3px;
}

.slider-range .slider-bar li:last-child label {
    margin-right: 0;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

.slider-range .slider-bar input:checked + label {
    color: #fff;
    background: #67b7f3;
    border-color: #67b7f3;
    cursor: default;
}

.text-red {
    color: #f60;
}

.text-uppeurcase {
    text-transform: uppercase;
}

[v-cloak] {
    display: none;
}