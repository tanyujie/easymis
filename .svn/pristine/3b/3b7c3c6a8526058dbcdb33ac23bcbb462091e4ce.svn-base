body,
h1,
h2,
h3,
h4,
h5,
.ui.button,
.ui.modal > .header
.ui.menu,
.ui.header,pre{
    font-family: "Hiragino Sans GB", "open sans", "sans-serif", "Helvetica", "STHeiti", "Arial", "Microsoft YaHei", "simsun";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-weight: normal;
}
.ui.checkbox label {
    cursor: pointer;
}

html,body{
    height: 100%;
}

#navbar {
    width:100%;
    float: left;
    margin: 0 auto;
    background-color: #293c55;
    height: 50px;
    line-height: 50px;
    top: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 9;
}

#navbar .logo {
    vertical-align: middle;
    font-size: 16px;
}

#navbar .logo img {
    height:26px;
    margin-top:11px;
}

#navbar nav {
    float: right;
}

#navbar a {
    color: #fff;
    max-height: 50px;
    overflow: hidden;
}

#navbar nav a {
    padding: 0 15px;
    float: left;
    height: 50px;
    display: inline-block;
}

#navbar nav a:hover,
#navbar nav a.active,
#navbar .menu.active,
#navbar .ucenter:hover {
    background: rgba(0, 0, 0, .2);
}

#navbar nav a.active {
    border-bottom: 2px solid #35A338;
}

#navbar .menu {
    float: right;
    display: none;
}

#navbar .ucenter {
    display: block;
    float: right;
    padding: 0 10px 0 15px;
    outline: none;
}

#navbar .ucenter.active {
    background: rgba(0, 0, 0, .2);
}

#main{
    width:100%;
    float: left;
    min-height: calc(100% - 152px);
}

@media only screen and (max-width:640px) {
    #navbar nav {
        display: none;
        position: absolute;
        top: 50px;
        background-color: rgba(41, 60, 85, .95);
        clear: both;
        left: 0;
        right: 0;
        z-index: 9;
    }
    #navbar nav a {
        display: block;
        width: 100%;
        height: 36px;
        line-height: 36px;
    }
    #navbar nav a.active {
        border-bottom: none;
        border-left: 2px solid #00b5ad;
    }
    #navbar .menu {
        display: block;
        padding: 0 10px 0 15px;
        margin-right: -15px;
    }
}

@media only screen and (min-width:641px) {
    #navbar nav {
        display: block!important;
    }
}

#footer {
    width:100%;
    float: left;
    background-color: #293c55;
    color: #94a1b2;
    line-height: 50px;
    padding: 0!important;
    text-align: center;
    overflow: hidden;
}

#footer a {
    color: #707d8d;
}

#footer .link {
    background: #f0f4fa;
    padding: 0 15px;
}

#footer .copyright {
    text-align: center;
    border-top: solid 1px rgba(255, 255, 255, .1);
    color: rgba(255, 255, 255, .9);
}

@media (max-width: 640px){
	#footer .copyright {
		display:none;
	}
}

.signbox .content{
    padding: 40px;
    position: relative;
}

.signbox .field{
    position: relative;
}

.signbox .getcode{
    position: absolute;
    right: 0;
    top: 3.5px;
}

.signbox .forget{
    float: right;
}

.ui.form .code.message:not(:empty){
    font-size: 12px;
    color: #21BA45;
    margin-top:-5px;
}

#introduction {
    padding: 40px 0;
    background: #5aa2ee url(../img/caption.png) repeat-x center bottom;
    background-size: 60%;
}

#introduction .container {
    color: rgba(255, 255, 255, .95);
    position: relative;
    z-index: 1;
}

@media only screen and (max-width: 991px) {
    #introduction .ui.column .column:last-child {
        text-align: left;
        width: 100%;
    }
}

#content {
    margin: 50px 0;
    position: relative;
}

.kf5-chatSupport-right-bottom .kf5-chatSupport-style4{
	top: auto!important;
	bottom: 30px;
}

.hide{
	display:none !important;
}